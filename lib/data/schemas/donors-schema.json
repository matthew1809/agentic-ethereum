{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Donor System",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "donor_info": {
        "type": "object",
        "properties": {
          "name": {
            "type": "object",
            "properties": {
              "$share": {
                "type": "string"
              }
            },
            "required": ["$share"]
          },
          "amount": {
            "type": "object",
            "properties": {
              "$share": {
                "type": "number"
              }
            },
            "required": ["$share"]
          }
        },
        "required": ["name", "amount"]
      },
      "recurring": {
        "type": "boolean"
      },
      "duration_months": {
        "type": "integer",
        "minimum": 0,
        "description": "Number of months for recurring donations. 0 means one-time donation."
      }
    },
    "required": ["_id", "donor_info", "recurring", "duration_months"]
  }
}
